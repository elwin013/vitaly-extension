{
  "name": "vitaly-extension",
  "description": "A starter template for Chrome Extension (MV3) with Vite, Vue and Typescript",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "package": "npm run build && node build.js",
    "test": "vitest",
    "lint": "yarn run eslint --ext .js,.ts,.vue,.jsx src/",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md,vue}'"
  },
  "dependencies": {
    "vue": "^3.2.37",
    "webextension-polyfill": "^0.9.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.13",
    "@types/chrome": "^0.0.193",
    "@types/jest": "^28.1.6",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@vitejs/plugin-vue": "^3.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "crx3": "^1.1.3",
    "eslint": "^8.21.0",
    "eslint-plugin-vue": "^9.3.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.4",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "vitest": "^0.21.0",
    "vue-tsc": "^0.38.4"
  },
  "engines": {
    "node": ">= 16.16.0",
    "npm": ">= 8.11.0",
    "yarn": ">= 1.22.0"
  }
}